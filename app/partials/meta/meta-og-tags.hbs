{{#helper_og_tags}}
    {{#if app_id}}<meta property="fb:app_id" content="{{app_id}}" />{{/if}}
    {{#if url}}<meta property="og:url" content="{{url}}">{{/if}}
    {{#if site_name}}<meta property="og:site_name" content="{{site_name}}">{{/if}}
    {{#if title}}<meta property="og:title" content="{{title}}">{{/if}}
    {{#if type}}<meta property="og:type" content="{{type}}">{{/if}}
    {{#if description}}<meta property="og:description" content="{{description}}">{{/if}}
    {{#image}}
        {{#if url}}<meta property="og:image" content="{{{url}}}">{{/if}}
        {{#if width}}<meta property="og:image:width" content="{{{width}}}">{{/if}}
        {{#if height}}<meta property="og:image:height" content="{{{height}}}">{{/if}}
    {{/image}}
{{/helper_og_tags}}