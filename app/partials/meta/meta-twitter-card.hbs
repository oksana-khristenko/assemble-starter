{{#helper_twitter_card}}
    {{#data}}
    {{#if card}}<meta name="twitter:card" content="{{card}}">{{/if}}
    {{#if site}}<meta name="twitter:site" content="{{site}}">{{/if}}
    {{#if creator}}<meta name="twitter:creator" content="{{creator}}">{{/if}}
    {{#if title}}<meta name="twitter:title" content="{{title}}">{{/if}}
    {{#if description}}<meta name="twitter:description" content="{{description}}">{{/if}}
    {{#image}}
        {{#if url}}<meta name="twitter:image" content="{{url}}">{{/if}}
        {{#if alt}}<meta name="twitter:image:alt" content="{{alt}}">{{/if}}
    {{/image}}
    {{/data}}
{{/helper_twitter_card}}